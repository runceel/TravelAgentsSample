@page "/"
@using Markdig
@using Microsoft.SemanticKernel
@using Microsoft.SemanticKernel.ChatCompletion
@using TravelAgentsSample.Agents
@inject AgentFactory AgentFactory

<PageTitle>Home</PageTitle>

<h1>トラベル エージェント サンプル</h1>
<div>
    <textarea @bind="_inputMessage" rows="5" cols="100" />
</div>
<button @onclick="AskToAgentAsync" disabled="@_isProcessing">問い合わせる</button>


@if(_messages.Count != 0)
{
    <hr />
    @foreach (var m in _messages)
    {
        <div>
            @((MarkupString)Markdown.ToHtml(m, _pipeline))
        </div>
    }
}
